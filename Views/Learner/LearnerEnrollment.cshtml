<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

<script>
    $(document).ready(function() {

      $('.citizen,.disabilityOpt,.disability,.province').select2();

      $('.gender').select2();

      $('.form2Header').hide();

      $('.grade').select2();

      $('.intake').select2();

      $('.addressType').select2();

      $('.nationality').select2();

      $('.contact').hide();

      $('.back,.header2').hide();

      $('.save').hide();

      $('.cn').hide();

      $('.ref').attr('readonly', 'true');

      $('.ref').css('background-color' , '#06038D');

      $('.line1').attr('readonly', 'true');
      $('.line2').attr('readonly', 'true');
      $('.line3').attr('readonly', 'true');

      $('.line1').css('background-color' , '#06038D');
      $('.line2').css('background-color' , '#06038D');
      $('.line3').css('background-color' , '#06038D');

     $('.citizen').on('change', function () {

      var selectedItem = $(".citizen").find('option:selected').text();

      if(selectedItem == "Yes"){

         $('.Pass').attr('readonly', 'true');

         $('.Pass').css('background-color' , '#06038D');

         $('.rsa').attr('readonly', false);

         $('.rsa').css('background-color' , '#FFFFFF');

      }else if(selectedItem == "Select Option"){

          $('.Pass').attr('readonly', false);

          $('.Pass').css('background-color' , '#FFFFFF');

          $('.rsa').attr('readonly', false);

          $('.rsa').css('background-color' , '#FFFFFF');

      }else{

          $('.Pass').attr('readonly', false);

          $('.Pass').css('background-color' , '#FFFFFF');

          $('.rsa').attr('readonly', 'true');

          $('.rsa').css('background-color' , '#06038D');
      }
     });

      $('.uploadOpt').on('change', function () {

      var selectedItem = $(".uploadOpt").find('option:selected').text();

      if(selectedItem == "Select Upload Option"){

           $('.enrollment').hide();
           $('.enrollmentAdobe').hide();
           $('.studNum').hide();


      }else if(selectedItem == "Adobe Digital Form"){

            alert("To start with adobe, select 'Continue' below first");
            $('.enrollment').hide();
            $('.buttons').hide();
            $('.enrollmentAdobe').show();
            $('.studNum').hide();

      }else if(selectedItem == "Normal Upload"){

            $('.enrollment').show();
            $('.enrollmentAdobe').hide();
            $('.buttons').show();
            $('.studNum').show();
       }
     });


     $('.addressType').on('change', function () {

      var selectedItem = $(".addressType").find('option:selected').text();

      if(selectedItem == "Select Address Type"){

          $('.line1').attr('readonly', 'true');
          $('.line2').attr('readonly', 'true');
          $('.line3').attr('readonly', 'true');

          $('.line1').css('background-color' , '#06038D');
          $('.line2').css('background-color' , '#06038D');
          $('.line3').css('background-color' , '#06038D');


      }else{


          $('.line1').attr('readonly', false);
          $('.line2').attr('readonly', false);
          $('.line3').attr('readonly', false);

          $('.line1').css('background-color' , '#FFFFFF');
          $('.line2').css('background-color' , '#FFFFFF');
          $('.line3').css('background-color' , '#FFFFFF');

      }

     });

     $(".next").click(function(){

       $('.el,.header1').hide();
       $('.cn,.header2').show();
       $('.next').hide();
       $('.back').show();
       $('.save').show();


      });

       $('.back').click(function(){

       $('.el,.header1').show();
       $('.next').show();
       $('.back,.header2').hide();
       $('.cn').hide();
       $('.save').hide();

      });

    });
</script>


