@model SchoolApp.Models.Employee
@using SchoolApp.eNums

@{
    ViewData["Title"] = "Register Employee";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
</head>

<style>

    .form-control, .accordion-item {
        border-color: black;
    }

    .acchead {
        background-color: #2774F1
    }

    .select2-selection__rendered {
        line-height: 31px !important;
    }

    .select2-container .select2-selection--single {
        height: 38px !important;
        border-color: black;
        border-left: solid 5px darkblue;
    }

    .select2-selection__arrow {
        height: 34px !important;
    }

    .desc, .form-control {
        border-left: solid 5px darkblue;
    }

    .card-header, .head {
        background-color: darkblue;
    }

    a {
        text-decoration: none;
    }

    .card-border, .table {
        border-color: black;
    }

    .ref {
        background-color: darkblue;
    }
</style>

<div class="header1">
    <div class="alert mb-1 alert-primary d-flex align-items-center" id="form1" role="alert" style="border-bottom-color:darkblue; border-bottom-width:3px;">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi el bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
        </svg>
        <div class="el">
            <strong>Employee Biographical Details</strong>
        </div>
    </div>
</div>

<div class="row">
    <form asp-action="RegisterEmployee" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="form-group col-md-3">
                <label asp-for="Title" class="control-label"></label>
                <select asp-for="Title" class="form-control citizen" asp-items="Html.GetEnumSelectList<eTitle>()">
                    <option selected="selected" value="">Select Title</option>
                </select>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group col-md-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group col-md-3">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group col-md-3">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" class="form-control gender" asp-items="Html.GetEnumSelectList<eGender>()">
                    <option selected="selected" value="">Select Gender</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="form-group col-md-3">
                <label asp-for="Nationality" class="control-label"></label>
                <select asp-for="Nationality" class="form-control nationality" asp-items="Html.GetEnumSelectList<eNationality>()">
                    <option selected="selected" value="">Select Nationality</option>
                </select>
                <span asp-validation-for="Nationality" class="text-danger"></span>
            </div>

            <div class="form-group col-md-3">
                <label asp-for="RSAIdNumber" class="control-label"></label>
                <input asp-for="RSAIdNumber" class="form-control" />
                <span asp-validation-for="RSAIdNumber" class="text-danger"></span>
            </div>

            <div class="form-group col-md-3">
                <label asp-for="PassportNum" class="control-label"></label>
                <input asp-for="PassportNum" class="form-control" />
                <span asp-validation-for="PassportNum" class="text-danger"></span>
            </div>

            <div class="form-group col-md-3">
                <label asp-for="HomeLanguage" class="control-label"></label>
                <select asp-for="HomeLanguage" class="form-control lang" asp-items="Html.GetEnumSelectList<eLanguage>()">
                    <option selected="selected" value="">Select Home Language</option>
                </select>
                <span asp-validation-for="HomeLanguage" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Race" class="control-label"></label>
                <select asp-for="Race" class="form-control race" asp-items="Html.GetEnumSelectList<eRace>()">
                    <option selected="selected" value="">Select Race</option>
                </select>
                <span asp-validation-for="Race" class="text-danger"></span>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Disability" class="control-label"></label>
                <select asp-for="Disability" class="form-control disability" asp-items="Html.GetEnumSelectList<eDisability>()">
                    <option selected="selected" value="">Select Disability Option</option>
                </select>
                <span asp-validation-for="Disability" class="text-danger"></span>
            </div>

            <div class="form-group col-md-12">
                <label asp-for="IDPassportFile" class="control-label"></label>
                <input required asp-for="IDPassportFormFile" type="file" class="form-control" />
                <span asp-validation-for="IDPassportFile" class="text-danger"></span>
            </div>

        </div><br />
        <div class="header1">
            <div class="alert mb-1 alert-primary d-flex align-items-center" id="form1" role="alert" style="border-bottom-color:darkblue; border-bottom-width:3px;">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi el bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
                    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                </svg>
                <div class="el">
                    <strong>Employment Details</strong>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-3">
                    <label asp-for="EmployeeType" class="control-label"></label>
                    <select asp-for="EmployeeType" class="form-control empType" asp-items="Html.GetEnumSelectList<eEmployeeType>()">
                        <option selected="selected" value="">Select Employee Type</option>
                    </select>
                    <span asp-validation-for="EmployeeType" class="text-danger"></span>
                </div>

                <div class="form-group col-md-3">
                    <label asp-for="EmploymentType" class="control-label"></label>
                    <select asp-for="EmploymentType" class="form-control emplType" asp-items="Html.GetEnumSelectList<eEmploymentType>()">
                        <option selected="selected" value="">Select Employment Type</option>
                    </select>
                    <span asp-validation-for="EmploymentType" class="text-danger"></span>
                </div>

                <div class="form-group col-md-3">
                    <label asp-for="EmployeeStatus" class="control-label"></label>
                    <select asp-for="EmployeeStatus" class="form-control empStatus" asp-items="Html.GetEnumSelectList<eEmployeeStatus>()">
                        <option selected="selected" value="">Select Employee Status</option>
                    </select>
                    <span asp-validation-for="EmployeeStatus" class="text-danger"></span>
                </div>

                <div class="form-group col-md-3">
                    <label asp-for="Grade" class="control-label"></label>
                    <select asp-for="Grade" class="form-control grade" asp-items="Html.GetEnumSelectList<eGrade>()">
                        <option selected="selected" value="">Select Grade</option>
                    </select>
                    <span asp-validation-for="EmployeeStatus" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="alert mb-1 alert-primary d-flex align-items-center" id="form1" role="alert" style="border-bottom-color:darkblue; border-bottom-width:3px;">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi el bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
                    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                </svg>
                <div class="el">
                    <strong>Employment Contact Details</strong>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label asp-for="Cellphone" class="control-label"></label>
                    <input asp-for="Cellphone" class="form-control" />
                    <span asp-validation-for="Cellphone" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="AlternativeCell" class="control-label"></label>
                    <input asp-for="AlternativeCell" class="form-control" />
                    <span asp-validation-for="AlternativeCell" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div><br />
           <div class="form-group">
               <button type="submit" class="btn btn-outline-success"><i class="fa fa-save"> </i> Save</button>
               <button type="reset" class="btn btn-primary"><i class="fa fa-undo"> </i> Reset</button>
               <button type="button" class="btn btn-outline-danger float-end"><i class="fa fa-window-close"> </i> Close</button>

           </div>
        </div>
    </form>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script>
    $(document).ready(function() {

      $('.citizen,.nationality,.disability,.lang,.gender,.race,.emplType,.empStatus,.empType').select2();

      $('.ref').attr('readonly', 'true');

      $('.ref').css('background-color' , '#06038D');

      $('.grade').attr('disabled', 'true');

      $('.grade').css('background-color' , '#06038D');

      $('.line1').attr('readonly', 'true');
      $('.line2').attr('readonly', 'true');
      $('.line3').attr('readonly', 'true');

      $('.line1').css('background-color' , '#06038D');
      $('.line2').css('background-color' , '#06038D');
      $('.line3').css('background-color' , '#06038D');

     $('.citizen').on('change', function () {

      var selectedItem = $(".citizen").find('option:selected').text();

      if(selectedItem == "Yes"){

         $('.Pass').attr('readonly', 'true');

         $('.Pass').css('background-color' , '#06038D');

         $('.rsa').attr('readonly', false);

         $('.rsa').css('background-color' , '#FFFFFF');

      }else if(selectedItem == "Select Option"){

          $('.Pass').attr('readonly', false);

          $('.Pass').css('background-color' , '#FFFFFF');

          $('.rsa').attr('readonly', false);

          $('.rsa').css('background-color' , '#FFFFFF');

      }else{

          $('.Pass').attr('readonly', false);

          $('.Pass').css('background-color' , '#FFFFFF');

          $('.rsa').attr('readonly', 'true');

          $('.rsa').css('background-color' , '#06038D');
      }
     });



     $('.empType').on('change', function () {

       var selectedItem = $(".empType").find('option:selected').text();

       if(selectedItem == "Educator"){

        $('.grade').attr('disabled', false);
        $('.grade').css('background-color' , '#FFFFFF');

       }else{
            $('.grade').attr('disabled', 'true');
            $('.grade').css('background-color' , '#06038D');
       }

     });
         


      $('.uploadOpt').on('change', function () {

      var selectedItem = $(".uploadOpt").find('option:selected').text();

      if(selectedItem == "Select Upload Option"){

           $('.enrollment').hide();
           $('.enrollmentAdobe').hide();
           $('.studNum').hide();


      }else if(selectedItem == "Adobe Digital Form"){

            alert("To start with adobe, select 'Continue' below first");
            $('.enrollment').hide();
            $('.buttons').hide();
            $('.enrollmentAdobe').show();
            $('.studNum').hide();

      }else if(selectedItem == "Normal Upload"){

            $('.enrollment').show();
            $('.enrollmentAdobe').hide();
            $('.buttons').show();
            $('.studNum').show();
       }
     });


     $('.addressType').on('change', function () {

      var selectedItem = $(".addressType").find('option:selected').text();

      if(selectedItem == "Select Address Type"){

          $('.line1').attr('readonly', 'true');
          $('.line2').attr('readonly', 'true');
          $('.line3').attr('readonly', 'true');

          $('.line1').css('background-color' , '#06038D');
          $('.line2').css('background-color' , '#06038D');
          $('.line3').css('background-color' , '#06038D');


      }else{


          $('.line1').attr('readonly', false);
          $('.line2').attr('readonly', false);
          $('.line3').attr('readonly', false);

          $('.line1').css('background-color' , '#FFFFFF');
          $('.line2').css('background-color' , '#FFFFFF');
          $('.line3').css('background-color' , '#FFFFFF');

      }

     });

     $(".next").click(function(){

       $('.el,.header1').hide();
       $('.cn,.header2').show();
       $('.next').hide();
       $('.back').show();
       $('.save').show();


      });

       $('.back').click(function(){

       $('.el,.header1').show();
       $('.next').show();
       $('.back,.header2').hide();
       $('.cn').hide();
       $('.save').hide();

      });

    });
</script>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

