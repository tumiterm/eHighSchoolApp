@model IEnumerable<SchoolApp.Models.Employee>

@{
    ViewData["Title"] = "EnrolledLearners";
}

<style>
    a {
        text-decoration: none;
    }
</style>

<p>
    <a asp-action="RegisterEmployee" class="btn btn-outline-info"><i class="fa fa-plus"></i> Register New Employee</a>
    <a asp-action="RegisterEmployee" class="btn btn-danger float-end"><i class="fa fa-file-pdf"></i> Print File</a>

</p>

<div class="header1">
    <div class="alert elHeader mb-1 alert-primary d-flex align-items-center" id="form1" role="alert" style="border-bottom-color:darkblue; border-bottom-width:3px;">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi el bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
        </svg>
        <div class="el">
            <strong>List of All Registered Employees</strong>
        </div>
    </div>
</div>


<table class="table mr-5 ml-5 table-striped" id="datatablesSimple">
    <thead>
        <tr>
            <th>
               
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmploymentType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>

            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EmployeeId">Open</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeType)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.EmploymentType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>

                <td>
                    <a asp-action="SubjectAddition" asp-controller="Subject" asp-route-LearnerId="@item.EmployeeId"> Qualifications</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="~/js/datatables-simple-demo.js"></script>
