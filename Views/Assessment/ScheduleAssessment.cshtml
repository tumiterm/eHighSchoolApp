@model SchoolApp.Models.Assessment
@using SchoolApp.eNums

@{
    ViewData["Title"] = "Assessment";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
</head>

<style>

    .form-control, .accordion-item {
        border-color: black;
    }

    .acchead {
        background-color: #2774F1
    }

    .select2-selection__rendered {
        line-height: 31px !important;
    }

    .select2-container .select2-selection--single {
        height: 38px !important;
        border-color: black;
        border-left: solid 5px darkblue;
    }

    .select2-selection__arrow {
        height: 34px !important;
    }


    .card-header, .head {
        background-color: darkblue;
    }

    a {
        text-decoration: none;
    }

    .card-border, .table {
        border-color: black;
    }

    .ref {
        background-color: darkblue;
    }
</style>

<div class="header1">
    <div class="alert mb-1 alert-primary d-flex align-items-center" id="form1" role="alert" style="border-bottom-color:darkblue; border-bottom-width:3px;">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi el bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
        </svg>
        <div class="el">
            <strong>Schedule Assessment</strong>
        </div>
    </div>
</div>

<form asp-action="ScheduleAssessment">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="alert alert-danger" role="alert">
            <div class="form-group col-md-12">
                <label asp-for="Subject" class="control-label"></label>
                <select asp-for="Subject" class="form-control cycle" asp-items="Html.GetEnumSelectList<eSubject>()">
                    <option selected="selected" value="">Select Subject</option>
                </select>
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group col-md-5">
            <label asp-for="Grade" class="control-label"></label>
            <select asp-for="Grade" class="form-control grade" asp-items="Html.GetEnumSelectList<eGrade>()">
                <option selected="selected" value="">Select Grade</option>
            </select>
            <span asp-validation-for="Grade" class="text-danger"></span>
        </div>
        <div class="form-group col-md-5">
            <label asp-for="AssessmentDate" class="control-label"></label>
            <input asp-for="AssessmentDate" class="form-control" />
            <span asp-validation-for="AssessmentDate" class="text-danger"></span>
        </div>
        <div class="form-group col-md-2">
            <label asp-for="AssessmentTime" class="control-label"></label>
            <input asp-for="AssessmentTime" class="form-control" />
            <span asp-validation-for="AssessmentTime" class="text-danger"></span>
        </div>
        <div class="form-group col-md-5">
            <label asp-for="Classroom" class="control-label"></label>
            <select asp-for="Classroom" class="form-control classroom" asp-items="Html.GetEnumSelectList<eClass>()">
                <option selected="selected" value="">Select Classroom for Assessment</option>
            </select>
            <span asp-validation-for="Classroom" class="text-danger"></span>
        </div>

        <div class="form-group col-md-5">
            <label asp-for="AssessmentType" class="control-label"></label>
            <select asp-for="AssessmentType" class="form-control classroom" asp-items="Html.GetEnumSelectList<eAssesType>()">
                <option selected="selected" value="">Select Assessment Type</option>
            </select>
            <span asp-validation-for="Classroom" class="text-danger"></span>
        </div>

        <div class="form-group col-md-8">
            <label asp-for="AssessmentStatus" class="control-label"></label>
            <select asp-for="AssessmentStatus" class="form-control status" asp-items="Html.GetEnumSelectList<eStatus>()">
                <option selected="selected" value="">Select Option</option>
            </select>
            <span asp-validation-for="AssessmentStatus" class="text-danger"></span>
        </div>

        <div class="form-group mt-2">
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SendMessage" style="background-color: red" /> @Html.DisplayNameFor(model => model.SendMessage)
                </label>
            </div>
        </div>
    </div>
    <div class="form-group mt-4" style="background-color:whitesmoke;">
        <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Save</button>
        <a class="btn btn-info" asp-action="AssessmentList"><i class="fa fa-eye"></i> View Assessments</a>
        <button type="reset" class="btn btn-outline-warning"><i class="fa fa-undo"></i> Reset</button>
        <button type="button" class="btn btn-outline-danger float-end"><i class="fa fa-window-close"></i> Exit</button>
    </div>
</form>
<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script>
    $(document).ready(function() {
        $('.cycle,.grade,.status,.classroom').select2();
    });
</script>



