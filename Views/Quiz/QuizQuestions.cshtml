@model dynamic
@using SchoolApp.eNums

@{
    ViewData["Title"] = "Quiz";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
</head>

<style>

    .form-control, .accordion-item {
        border-color: black;
    }

    .acchead {
        background-color: #2774F1
    }

    .select2-selection__rendered {
        line-height: 31px !important;
    }

    .select2-container .select2-selection--single {
        height: 38px !important;
        border-color: black;
        border-left: solid 5px darkblue;
    }

    .select2-selection__arrow {
        height: 34px !important;
    }

    .desc, .form-control {
        border-left: solid 5px darkblue;
    }

    .card-header, .head {
        background-color: darkblue;
    }

    a {
        text-decoration: none;
    }

    .card-border, .table {
        border-color: black;
    }

    .ref {
        background-color: darkblue;
    }
</style>


<div class="header1">
    <div class="alert elHeader mb-1 alert-primary d-flex align-items-center" id="form1" role="alert" style="border-bottom-color:darkblue; border-bottom-width:3px;">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi el bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
        </svg>
        <div class="el">
            <strong>@ViewData["QDetails"]</strong>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <form asp-action="QuizQuestions">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div hidden>
            @Html.TextBox("AssociativeKey", ViewData["AssociativeKey"], new {htmlAttributes = new {@class="form-control", @name="AssociativeKey"}})
        </div>

            <div class="form-group col-md-8">
                <label  class="control-label">Add Question</label>
                <input name="Question" class="form-control" placeholder="1) What is an algorith" />
            </div>

                <div class="form-group mt-4" style="background-color:whitesmoke;">
                <button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Save</button>
                <button type="reset" class="btn btn-outline-warning"><i class="fa fa-undo"></i> Reset</button>

            </div>
        </form>
    </div>
</div>

<br />
<div class="alert alert-primary d-flex align-items-center" role="alert" style="border-bottom-color:darkblue; border-bottom-width:3px">
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
    </svg>
    <div>
        <strong>Quiz List of Questions</strong>
    </div>
</div>



<table class="table mr-5 ml-5 table-striped" id="datatablesSimple">
    <thead class="head">
        <tr>

            <th class="text-white">
                Question
            </th>

            
            <th class="text-white">
                Created By
            </th>
            <th class="text-white">
               Created On
            </th>
            <th class="text-white">
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (QuizResponse response in Model.ResposeList)
        {
            <tr>
                <td>
                    @response.Question
                </td>

               
                <td>
                    @response.CreatedBy
                </td>

                <td>
                    @response.CreatedOn
                </td>

                <td>
                    <a href="@Url.Action("OnQuizQuestions", "Quiz",new {ResponseId = response.AssociativeKey})"> Open</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script>
    $(document).ready(function() {
        $('.subject,.grade').select2();
    });
</script>


